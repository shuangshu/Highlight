{
  "manifest_version": 2,
  "name": "__MSG_highlight__",
  "version": "0.0.1",
  "default_locale":"zh_CN",
  "description": "__MSG_description__",
  "icons": {
    "16": "images/16.png",
    "24": "images/24.png",
    "32": "images/32.png",
    "48": "images/48.png",
    "64": "images/64.png",
    "96": "images/96.png",
    "128": "images/128.png"
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_title": "___MSG_title_",
    "default_icon": {
      "24": "images/24.png",
      "32": "images/32.png"
    }
  },
  "author": "___MSG_author_",
  "background": {
    "scripts": [
      "static/js/jquery-2.1.1.min.js",
      "static/js/jquery.stylesheet.min.js",
      "js/common.js",
      "js/background/contextMenu.js",
      "js/background/eventPage.js",
      "js/background/tab.js",
      "js/background/web.js"
    ],

    "persistent": false
  },
  "commands": {
    "CREATE": {
      "name": "CREATE",
      "description": "__MSG_add__"
    },
    "DELETE": {
      "name":"DELETE",
      "description": "__MSG_remove__"
    },
    "FOCUS": {
      "name":"FOCUS",
      "description": "__MSG_focus__"
    },
    "SEARCH": {
      "name":"SEARCH",
      "description": "__MSG_search__"
    },
    "SEARCHALL":{
      "name":"SEARCHALL",
      "description": "__MSG_searchAll__"
    }
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "options_page": "options.html",
  "permissions": [
    "clipboardWrite",
    "tts",
    "storage",
    "contextMenus",
    "unlimitedStorage",
    "webNavigation",
    "tabs",
    "<all_urls>"
  ]
}